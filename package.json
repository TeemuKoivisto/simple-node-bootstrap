{
  "name": "my-app",
  "version": "0.0.1",
  "description": "simple bootstrap for node",
  "main": "app.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "lint": "eslint ./**/*.js || true",
    "lint:fix": "eslint ./**/*.js --fix",
    "start": "node ./scripts/check_prod.js && node app.js || nodemon app.js",
    "pm2:start": "pm2 start -n myapp-api app.js",
    "db": "node ./scripts/db.js",
    "test": "npm run test:unit",
    "test:unit": "istanbul cover node_modules/mocha/bin/_mocha --require test/testhelper.js test/unit/**/*.js",
    "test:unit:noc": "mocha --require test/testhelper.js test/unit/**/*.js",
    "test:unit:watch": "npm run test:unit -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TeemuKoivisto/simple-node-bootstrap.git"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.1",
    "connect-busboy": "0.0.2",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "jsonwebtoken": "^7.4.0",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "mongoose": "^4.9.8",
    "morgan": "^1.8.1",
    "schema-inspector": "^1.6.8"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.13.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.0.0",
    "istanbul": "^0.4.5",
    "mocha": "3.3.0",
    "nock": "^9.0.13",
    "nodemon": "^1.11.0",
    "sinon": "^2.2.0",
    "supertest": "^3.0.0"
  }
}
